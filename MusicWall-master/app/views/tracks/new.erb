<div class="row">
  <div class="col-xs-12">
    <h1 class="">Post a Track</h1>
    <hr />
  </div>
</div>

<% unless @track.errors.empty? %>
<ul class="list-group">
  <% @track.errors.full_messages.each do |message| %>
    <li class="list-group-item text-warning"><%= message %></li>
  <% end %>
</ul>
<hr />
<% end %>

<% if logged_in? %>
<div class="row">
  <div class="col-xs-12">
    <form method="POST" action="/tracks/new" role="form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" name="title" value='<%= @track.title %>' />
      </div>

      <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" class="form-control" name="author" value='<%= @track.author %>' />
      </div>

      <div class="form-group">
        <label for="url">Url: (optional)</label>
        <input type="text" class="form-control" name="url" value='<%= @track.url %>'/>
      </div>

      <button type="submit" class="btn btn-primary pull-right">Post</button>
    </form>
  </div>
</div>

<% else %>
<div class="row">
  <div class="col-xs-12">
    <h3 class="text-warning">You must <a href='/login'>log in</a> to post tracks!</h3>
  </div>
</div>
<% end %>